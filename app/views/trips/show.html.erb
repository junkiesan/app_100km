<div class="container">
  <div>
  <h1>Trip Show</h1>
  </div>
  <div>
    <ul>
      <li>Name: <%= @trip.name %></li>
      <li>Start Date: <%= @trip.start_date %></li>
      <li>End Date: <%= @trip.end_date %></li>
      <li>User: <%= @trip.user.name %></li>
    </ul>
  </div>
  <div>
  <p><%= link_to "Delete #{@trip.name}",
          trip_path(@trip),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  <i class="fa fa-trash destroy_venue"></i></p>

  <p><%= link_to "Edit #{@trip.name}", edit_trip_path(@trip) %></p>

  <p><%= link_to "Back to all", trips_path(@trips) %></p>
  </div>
  <div>
    <h3>List</h3>
    <% @trip.venues.each do |venue| %>
    <p><%= venue.name %></p>
    <p><%= venue.category %></p>
    <% end %>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-venue-markers="<%= @venue_markers.to_json %>"
     data-trip-marker="<%= @trip_marker.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <button class="nav_button">
    <%= link_to "Save Trip", trip_path(@trip), class: 'save-trip-btn' %>
  </button>
</div>
