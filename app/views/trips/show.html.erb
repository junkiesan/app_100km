<div class="trip-container">
<!-- SIDE IMAGE -->
<div class="side-image">
  <img src="https://images.unsplash.com/photo-1513124146973-b7538cd925bc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80" alt="Cliff photo">
</div>

<!-- PAGE CONTENT -->
<div class=""></div>
  <div>
    <ul>
      <li>Name: <%= @trip.name %></li>
      <li>Start Date: <%= @trip.start_date %></li>
      <li>End Date: <%= @trip.end_date %></li>
      <li>User: <%= @trip.user.name %></li>
    </ul>
  </div>
  <div>
  <p><%= link_to "Delete #{@trip.name}",
          trip_path(@trip),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  <i class="fa fa-trash destroy_venue"></i></p>

  <p><%= link_to "Edit #{@trip.name}", edit_trip_path(@trip) %></p>

  <p><%= link_to "Back to all", trips_path(@trips) %></p>
  </div>
  <div>
    <h3>List</h3>
    <% @trip.venues.each do |venue| %>
    <p><%= venue.name %></p>
    <p><%= venue.category %></p>
    <% end %>
  </div>
  <button class="nav_button">
    <%= link_to "Save Trip", trip_path(@trip), class: 'save-trip-btn' %>
  </button>
</div>

<div class="trip-map">
  <div id="map"
     style="width: 50%; height: 100vh;"
     data-venue-markers="<%= @venue_markers.to_json %>"
     data-trip-marker="<%= @trip_marker.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>


